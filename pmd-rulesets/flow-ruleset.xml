    <description>Quickstart configuration of PMD for Flows</description>

    <rule
        name="PrefixSubflowLabel"
        language="xml"
        message="A Subflow's label should start with SFL"
        class="net.sourceforge.pmd.lang.rule.XPathRule"
    >
        <description>

        </description>
        <priority>1</priority>
        <properties>
            <property name="version" value="2.0" />
            <property name="xpath">
                <value>
            <![CDATA[
            /Flow/label/text[not(starts-with(@Image,'SFL')) and //Flow/processType/text[@Image = 'AutoLaunchedFlow']]
            ]]>
        </value>
            </property>
        </properties>
    </rule>

    <rule
        name="PrefixSubflowApiName"
        language="xml"
        message="A Subflow's API Name should start with SFL"
        class="net.sourceforge.pmd.lang.rule.XPathRule"
    >
        <description>

        </description>
        <priority>1</priority>
        <properties>
            <property name="version" value="2.0" />
            <property name="xpath">
                <value>
            <![CDATA[
            /Flow/processType/text[@Image = 'AutoLaunchedFlow' and not(starts-with(pmd:fileName(),'SFL'))]
            ]]>
        </value>
            </property>
        </properties>
    </rule>

    <rule
        name="RequireFlowAutolayout"
        language="xml"
        message="Flows must use Auto Layout"
        class="net.sourceforge.pmd.lang.rule.XPathRule"
    >
        <description>

        </description>
        <priority>1</priority>
        <properties>
            <property name="version" value="2.0" />
            <property name="xpath">
                <value>
            <![CDATA[
            /Flow//processMetadataValues[name/text/@Image = 'CanvasMode' and not(value/stringValue/text[@Image = 'AUTO_LAYOUT_CANVAS'])]
            ]]>
        </value>
            </property>
        </properties>
    </rule>


